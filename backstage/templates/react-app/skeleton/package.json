{
  "name": "${{ values.name }}",
  "version": "0.1.0",
  "description": "${{ values.description }}",
  "private": true,
  "type": "module",
  "scripts": {
{% if values.buildTool == "vite" %}
    "dev": "vite",
    "build": "{% if values.useTypeScript %}tsc && {% endif %}vite build",
    "preview": "vite preview",
{% elif values.buildTool == "webpack" %}
    "dev": "webpack serve --mode development",
    "build": "webpack --mode production",
{% else %}
    "start": "react-scripts start",
    "build": "react-scripts build",
    "eject": "react-scripts eject",
{% endif %}
{% if values.testingFramework == "vitest" %}
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
{% elif values.testingFramework == "jest" %}
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
{% endif %}
{% if values.includeE2E %}
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
{% endif %}
{% if values.includeESLint %}
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
{% endif %}
{% if values.includePrettier %}
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
{% endif %}
{% if values.includeStorybook %}
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
{% endif %}
    "type-check": "{% if values.useTypeScript %}tsc --noEmit{% else %}echo 'No TypeScript to check'{% endif %}"
  },
  "dependencies": {
    "react": "^${{ values.reactVersion }}.0.0",
    "react-dom": "^${{ values.reactVersion }}.0.0"{% if values.includeRouter %},
    "react-router-dom": "^6.8.0"{% endif %}{% if values.includeStateManagement == "zustand" %},
    "zustand": "^4.4.0"{% endif %}{% if values.includeStateManagement == "redux-toolkit" %},
    "@reduxjs/toolkit": "^1.9.0",
    "react-redux": "^8.1.0"{% endif %}{% if values.uiLibrary == "material-ui" %},
    "@mui/material": "^5.14.0",
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0"{% endif %}{% if values.uiLibrary == "chakra-ui" %},
    "@chakra-ui/react": "^2.8.0",
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "framer-motion": "^10.16.0"{% endif %}{% if values.uiLibrary == "ant-design" %},
    "antd": "^5.8.0"{% endif %}{% if values.includeAPI and values.apiClient == "axios" %},
    "axios": "^1.5.0"{% endif %}{% if values.includeAPI and values.apiClient == "react-query" %},
    "@tanstack/react-query": "^4.32.0",
    "axios": "^1.5.0"{% endif %}{% if values.includeAPI and values.apiClient == "swr" %},
    "swr": "^2.2.0",
    "axios": "^1.5.0"{% endif %}{% if values.includeAuth and values.authProvider == "auth0" %},
    "@auth0/auth0-react": "^2.2.0"{% endif %}{% if values.includeAuth and values.authProvider == "firebase" %},
    "firebase": "^10.3.0"{% endif %}{% if values.includeAuth and values.authProvider == "supabase" %},
    "@supabase/supabase-js": "^2.33.0"{% endif %}
  },
  "devDependencies": {
{% if values.buildTool == "vite" %}
    "@vitejs/plugin-react": "^4.0.3",
    "vite": "^4.4.5"{% if values.includePWA %},
    "vite-plugin-pwa": "^0.16.4"{% endif %},
{% elif values.buildTool == "webpack" %}
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0",
    "webpack-dev-server": "^4.15.0",
    "html-webpack-plugin": "^5.5.0",
    "css-loader": "^6.8.0",
    "style-loader": "^3.3.0",
{% else %}
    "react-scripts": "5.0.1",
{% endif %}
{% if values.useTypeScript %}
    "typescript": "^5.0.2",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
{% endif %}
{% if values.testingFramework == "vitest" %}
    "vitest": "^0.34.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/user-event": "^14.4.3",
    "jsdom": "^22.1.0"{% if values.includeE2E %},
    "@playwright/test": "^1.37.0"{% endif %},
{% elif values.testingFramework == "jest" %}
    "jest": "^29.6.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/user-event": "^14.4.3",
    "jest-environment-jsdom": "^29.6.0"{% if values.includeE2E %},
    "@playwright/test": "^1.37.0"{% endif %},
{% endif %}
{% if values.includeESLint %}
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3"{% if values.useTypeScript %},
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0"{% endif %},
{% endif %}
{% if values.includePrettier %}
    "prettier": "^3.0.0"{% if values.uiLibrary == "tailwind" %},
    "prettier-plugin-tailwindcss": "^0.5.0"{% endif %},
{% endif %}
{% if values.includeHusky %}
    "husky": "^8.0.0",
    "lint-staged": "^13.2.0",
{% endif %}
{% if values.uiLibrary == "tailwind" %}
    "tailwindcss": "^3.3.0",
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.27",
{% endif %}
{% if values.includeStorybook %}
    "@storybook/react": "^7.4.0",
    "@storybook/react-vite": "^7.4.0",
    "@storybook/addon-essentials": "^7.4.0",
    "@storybook/addon-interactions": "^7.4.0",
    "@storybook/addon-links": "^7.4.0",
    "@storybook/blocks": "^7.4.0",
    "@storybook/testing-library": "^0.2.0",
{% endif %}
    "@types/node": "^20.5.0"
  },
{% if values.includeHusky %}
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
{% if values.includeESLint %}
      "eslint --fix",
{% endif %}
{% if values.includePrettier %}
      "prettier --write"
{% endif %}
    ]{% if values.includePrettier %},
    "*.{json,css,md}": [
      "prettier --write"
    ]{% endif %}
  },
{% endif %}
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}