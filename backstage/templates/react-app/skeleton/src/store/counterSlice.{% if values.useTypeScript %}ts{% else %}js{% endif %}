import { createSlice{% if values.useTypeScript %}, PayloadAction{% endif %} } from '@reduxjs/toolkit'

{% if values.useTypeScript %}interface CounterState {
  value: number
}

const initialState: CounterState = {{% else %}const initialState = {{% endif %}
  value: 0,
}

export const counterSlice = createSlice({
  name: 'counter',
  initialState,
  reducers: {
    increment: (state) => {
      state.value += 1
    },
    decrement: (state) => {
      state.value -= 1
    },
    incrementByAmount: (state, action{% if values.useTypeScript %}: PayloadAction<number>{% endif %}) => {
      state.value += action.payload
    },
    reset: (state) => {
      state.value = 0
    },
  },
})

export const { increment, decrement, incrementByAmount, reset } = counterSlice.actions

export default counterSlice.reducer