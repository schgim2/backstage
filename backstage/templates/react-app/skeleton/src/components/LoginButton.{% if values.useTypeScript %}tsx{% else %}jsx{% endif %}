{% if values.useTypeScript %}import React from 'react'
{% else %}import React from 'react'
{% endif %}
import { useAuth0 } from '@auth0/auth0-react'
{% if values.uiLibrary == "material-ui" %}import { Button } from '@mui/material'
{% elif values.uiLibrary == "chakra-ui" %}import { Button } from '@chakra-ui/react'
{% elif values.uiLibrary == "ant-design" %}import { Button } from 'antd'
{% endif %}

{% if values.useTypeScript %}const LoginButton: React.FC = () => {{% else %}const LoginButton = () => {{% endif %}
  const { loginWithRedirect } = useAuth0()

  return (
{% if values.uiLibrary == "material-ui" %}
    <Button
      variant="contained"
      color="primary"
      onClick={() => loginWithRedirect()}
    >
      Log In
    </Button>
{% elif values.uiLibrary == "chakra-ui" %}
    <Button
      colorScheme="blue"
      onClick={() => loginWithRedirect()}
    >
      Log In
    </Button>
{% elif values.uiLibrary == "ant-design" %}
    <Button
      type="primary"
      onClick={() => loginWithRedirect()}
    >
      Log In
    </Button>
{% elif values.uiLibrary == "tailwind" %}
    <button
      onClick={() => loginWithRedirect()}
      className="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"
    >
      Log In
    </button>
{% else %}
    <button onClick={() => loginWithRedirect()}>
      Log In
    </button>
{% endif %}
  )
}

export default LoginButton