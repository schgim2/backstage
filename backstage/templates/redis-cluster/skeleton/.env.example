# Redis Cluster Environment Configuration
# Copy this file to .env and update the values

# Redis Authentication
{% if values.enableAuth %}
REDIS_PASSWORD=your-secure-redis-password-here
{% else %}
# REDIS_PASSWORD=disabled
{% endif %}

# Cluster Configuration
CLUSTER_SIZE=${{ values.clusterSize }}
REPLICATION_FACTOR=${{ values.replicationFactor }}
REDIS_VERSION=${{ values.redisVersion }}

# Sentinel Configuration
{% if values.enableSentinel %}
ENABLE_SENTINEL=true
SENTINEL_QUORUM=${{ values.sentinelQuorum }}
{% else %}
ENABLE_SENTINEL=false
{% endif %}

# Security
{% if values.enableTLS %}
ENABLE_TLS=true
{% else %}
ENABLE_TLS=false
{% endif %}

# Monitoring
{% if values.enableMonitoring %}
ENABLE_MONITORING=true
{% else %}
ENABLE_MONITORING=false
{% endif %}

# Logging
LOG_LEVEL=${{ values.logLevel }}
{% if values.enableLogging %}
ENABLE_CENTRALIZED_LOGGING=true
{% else %}
ENABLE_CENTRALIZED_LOGGING=false
{% endif %}

# Network
REDIS_NETWORK=redis-cluster
REDIS_SUBNET=172.20.0.0/16

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=7